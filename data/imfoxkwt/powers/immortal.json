{
    "name": "Immortal",
    "description": "Your body resists death against your will, yet even this curse has a limit. Rest to restore your energy.",
    "type": "origins:multiple",
    "prevent": {
        "type": "apoli:prevent_death",
        "entity_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_res",
                    "change": -2
                },
                {
                    "type": "apoli:extinguish"
                },
                {
                    "type": "apoli:delay",
                    "ticks": 1,
                    "action": {
                        "type": "apoli:heal",
                        "amount": 40
                    }
                },
                {
                    "type": "apoli:clear_effect",
                    "effect": "minecraft:poison"
                },
                {
                    "type": "apoli:clear_effect",
                    "effect": "minecraft:poison"
                },
                {
                    "type": "apoli:clear_effect",
                    "effect": "minecraft:wither"
                }
            ]
        },
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:attribute",
                    "attribute": "minecraft:generic.max_health",
                    "comparison": ">",
                    "compare_to": 2
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:*_res",
                    "comparison": ">",
                    "compare_to": -18
                }
            ]
        }
    },
    "res": {
        "type": "apoli:resource",
        "start_value": 0,
        "min": -18,
        "max": 0,
        "hud_render": {
            "should_render": false
        }
    },
    "health": {
        "type": "apoli:modify_attribute",
        "attribute": "minecraft:generic.max_health",
        "modifier": {
            "operation": "addition",
            "resource": "*:*_res",
            "value": 0
        }
    },
    "sleep": {
        "type": "apoli:action_on_wake_up",
        "entity_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_res",
                    "change": 2
                },
                {
                    "type": "apoli:delay",
                    "ticks": 1,
                    "action": {
                        "type": "apoli:heal",
                        "amount": 2
                    }
                }
            ]
        }
    },
    "reset": {
        "type": "apoli:action_on_callback",
        "entity_action_respawned": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_res",
                    "operation": "set",
                    "change": 0
                },
                {
                    "type": "apoli:delay",
                    "ticks": 1,
                    "action": {
                        "type": "apoli:heal",
                        "amount": 40
                    }
                }
            ]
        }
    }
}