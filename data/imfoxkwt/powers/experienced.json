{
    "name": "Experienced",
    "description": "You know how to enchant without the need of an enchanting table, simply fusing lapis lazuli with the item in your inventory. You gain experience at a much higher rate.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Use 1, 2 or 3 lapislazulis for different levels of enchanting. You must have 1, 15, and 30 levels total for each."
        }
    ],
    "type": "apoli:multiple",
    "exp": {
        "type": "origins:modify_xp_gain",
        "modifier": {
            "operation": "multiply_total",
            "value": 1
        }
    },
