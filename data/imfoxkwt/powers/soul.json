{
    "name": "Soul Hunger",
    "description": "Kill a creature to absorb their soul, then use them to remain full of hunger and health.",
    "type": "origins:multiple",
    "soul": {
        "type": "apoli:resource",
        "min": 0,
        "max": 700,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 5
        }
    },
    "kill": {
        "type": "apoli:self_action_on_kill",
        "entity_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_soul",
                    "change": 20
                },
                {
                    "type": "apoli:execute_command",
                    "command": "particle minecraft:soul ~ ~1 ~ 0.5 0.5 0.5 0 10"
                }
            ]
        },
        "target_condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:living"
                },
                {
                    "type": "apoli:entity_type",
                    "entity_type": "minecraft:armor_stand",
                    "inverted": true
                }
            ]
        }
    },
    "food": {
        "type": "apoli:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:feed",
                    "food": 2,
                    "saturation": 0.5
                },
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_soul",
                    "change": -10
                }
            ]
        },
        "condition": {
            "type": "apoli:food_level",
            "comparison": "<=",
            "compare_to": 18
        }
    },
    "players": {
        "type": "apoli:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "apoli:area_of_effect",
            "radius": 4,
            "bientity_action": {
                "type": "apoli:and",
                "actions": [
                    {
                        "type": "apoli:actor_action",
                        "action": {
                            "type": "apoli:change_resource",
                            "resource": "*:*_soul",
                            "change": 1
                        }
                    },
                    {
                        "type": "apoli:target_action",
                        "action": {
                            "type": "apoli:execute_command",
                            "command": "tag @s add imfoxkwt.target"
                        }
                    },
                    {
                        "type": "apoli:actor_action",
                        "action": {
                            "type": "apoli:execute_command",
                            "command": "function imfoxkwt:raycast/start"
                        }
                    },
                    {
                        "type": "apoli:target_action",
                        "action": {
                            "type": "apoli:execute_command",
                            "command": "tag @s remove imfoxkwt.target"
                        }
                    }
                ]
            },
            "bientity_condition": {
                "type": "apoli:target_condition",
                "condition": {
                    "type": "apoli:in_tag",
                    "tag": "*:humans"
                }
            }
        }
    },
    "prevfood": {
        "name": "Soul Hunger",
        "type": "apoli:prevent_item_use",
        "item_condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:food"
                },
                {
                    "type": "apoli:ingredient",
                    "ingredient": {
                        "tag": "origins:ignore_diet"
                    },
                    "inverted": true
                }
            ]
        }
    },
    "regen": {
        "type": "apoli:active_self",
        "entity_action": {
            "type": "apoli:if_else",
            "condition": {
                "type": "apoli:resource",
                "resource": "*:*_soul",
                "comparison": ">=",
                "compare_to": 100
            },
            "if_action": {
                "type": "apoli:and",
                "actions": [
                    {
                        "type": "apoli:heal",
                        "amount": 2
                    },
                    {
                        "type": "apoli:change_resource",
                        "resource": "*:*_soul",
                        "change": -100
                    },
                    {
                        "type": "apoli:play_sound",
                        "sound": "block.conduit.ambient.short"
                    },
                    {
                        "type": "apoli:execute_command",
                        "command": "particle minecraft:soul ~ ~1 ~ 0.5 0.5 0.5 0 10"
                    }
                ]
            },
            "else_action": {
                "type": "apoli:execute_command",
                "command": "title @s actionbar [\"\",{\"text\":\"Not enough \",\"color\":\"gray\"},{\"text\":\"Souls\",\"color\":\"aqua\"}]"
            }
        },
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:relative_health",
                    "comparison": "!=",
                    "compare_to": 1
                }
            ]
        }
    },
    "death": {
        "type": "apoli:action_on_callback",
        "entity_action_respawned": {
            "type": "apoli:change_resource",
            "resource": "*:*_soul",
            "operation": "set",
            "change": 0
        }
    },
    "block": {
        "type": "apoli:action_on_block_break",
        "entity_action": {
            "type": "apoli:chance",
            "chance": 0.2,
            "action": {
                "type": "apoli:change_resource",
                "resource": "*:*_soul",
                "change": 10
            }
        },
        "block_condition": {
            "type": "apoli:in_tag",
            "tag": "minecraft:soul_fire_base_blocks"
        }
    }
}